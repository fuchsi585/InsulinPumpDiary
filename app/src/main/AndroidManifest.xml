<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.fuchsi.insulinPumpDiary">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="de.fuchsi.insulinPumpDiary.activity.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.fuchsi.insulinPumpDiary.activity.AddNewEntryActivity"
            android:label="@string/newEntry"
            android:parentActivityName="de.fuchsi.insulinPumpDiary.activity.MainActivity"
            android:windowSoftInputMode="stateVisible">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.fuchsi.insulinPumpDiary.activity.MainActivity" />
        </activity>
    </application>

</manifest>